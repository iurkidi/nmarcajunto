{% extends '::base.html.twig' %}

{% block body -%}
    <h1>noticias list</h1>

    <table class="records_list">
        <thead>
            <tr>                
                <th>Titulo</th>
                <th>Contenido</th>
                <th>Foto</th>
                <th>Autor</th>
                <th>Fechapub</th>                
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('noticias_show', { 'id': entity.id }) }}">{{ entity.titulo }}</a></td>                
                <td>{{ entity.contenido }}</td>
                <td>{{ entity.foto }}</td>
                <td>{{ entity.autor }}</td>
                <td>{% if entity.fechaPub %}{{ entity.fechaPub|date('Y-m-d H:i:s') }}{% endif %}</td>
               {# <td>
                <ul>
                    <li>
                        <a href="{{ path('noticias_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
                </td>#}
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('noticias_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
