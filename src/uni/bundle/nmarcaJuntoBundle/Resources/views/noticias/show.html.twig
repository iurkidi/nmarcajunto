{% extends '::base.html.twig' %}

{% block body -%}
    <h1>noticias</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ entity.titulo }}</td>
            </tr>
            <tr>
                <th>Contenido</th>
                <td>{{ entity.contenido }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ entity.foto }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ entity.autor }}</td>
            </tr>
            <tr>
                <th>Fechapub</th>
                <td>{{ entity.fechaPub|date('Y-m-d') }}</td>
            </tr>
        </tbody>
    </table>
         
            <h1>Comentarios</h1>
            
            {% for coment in entity.comentarioss %}
            <p class="negrita">({{ coment.fecha|date('Y-m-d') }} - {{ coment.nick }}) {{ coment.titulo }}</p>  
            <p>{{ coment.descripcion }}</p>
        {% endfor %}
            

        <ul class="record_actions">
    <li>
        <a href="{{ path('noticias') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('noticias_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <a href="{{ path('comentarios_new') }}">
            Nuevo comentario
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
